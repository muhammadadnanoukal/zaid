<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_smart_button_inherit" model="ir.ui.view">
        <field name="name">view_payment_smart_button_inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_schedule_meeting']" position="after">
                <button name="action_open_payments" type="object" class="oe_stat_button" icon="fa-dollar">
                    <div class="o_stat_info">
                        <field name="payment_count" class="o_stat_value"/>
                        <span class="o_stat_text">Payments</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
