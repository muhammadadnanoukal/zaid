<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_bom_form" model="ir.ui.view">
            <field name="name">sale.order.bom.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[@name='product_template_id']" position="after">
                    <field name="pricelist_id" invisible="1"/>
                    <field name="bom_id"
                           context="{
                                'default_product_tmpl_id': product_template_id,
                                'new_product_variant':True,
                                'form_view_ref': 'altanmia_bikar_saleorder_bom.mrp_bom_form_view_inherit_extension',
                                'default_pricelist_id': pricelist_id,}"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"
                           optional="show"
                           options="{'no_quick_create': True}"/>

                </xpath>

                 <xpath expr="//group[@class='oe_subtotal_footer oe_right'][1]/field[1]" position="after">
                    <field name="estimated_installation_days_total" force_save="1" colspan="1" readonly="1"/>
                </xpath>

                <xpath expr="//tree[1]/field[@name='product_uom_qty']" position="after">
                    <field name="total_installation_date" optional="hide" force_save="1"/>
                </xpath>

                <xpath expr="//group[2]/div[@class='o_row'][1]" position="after">
                    <label for="update_prices_from_bom" string=" "/>
                    <button name="update_prices_from_bom" type="object"
                            string=" Update Unit Prices (Bikar)"
                            help="Recompute price unit from bom"
                            class="btn-link mb-1 px-0" icon="fa-refresh"
                            confirm="This will update the price unit for each line."
                            />
                </xpath>


            </field>
        </record>
    </data>
</odoo>